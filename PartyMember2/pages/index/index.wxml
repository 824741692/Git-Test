<!--index.wxml-->
<van-tabs active="{{ active }}" bind:change="onChange">
    <van-tab title="党建地图">
        <map id="map" longitude="{{ map.coordinate.longitude }}" latitude="{{ map.coordinate.latitude }}" scale="{{ map.scale }}" markers="{{ map.markers }}" polyline="{{ map.polyline }}" circles="{{ map.circles }}" controls="{{ map.controls }}" show-location="{{ man.showLocationll }}"
            enable-3D="{{ map.enable3D }}" show-compass="{{ map.showCompass }}" subkey="{{ map.subkey }}" layer-style="3" bindcontroltap="controltap" bindmarkertap="markertap" bindregionchange="regionchange" style="width: 100%; height: 300px;">
    </map>
        <van-cell-group>
            <van-cell title="{{ info.department }}" icon="/images/flag.png" />
            <van-cell title="联系人" label="{{ info.name }}" />
            <van-cell title="联系方式" label="{{ info.phone }}" />
            <van-cell title="联系地址" label="{{ info.address }}" />
        </van-cell-group>
    </van-tab>
    <van-tab title="通知公告">
        <swiper class="card-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#53cac3">
            <swiper-item wx:for="{{adList}}" wx:key="{{index}}" class="{{cardCur == index ? 'cur' : ''}}">
                <view class="swiper-item">
                    <image src="{{item.ad_src}}" mode="aspectFill"></image>
                </view>
            </swiper-item>
        </swiper>
    </van-tab>
    <van-tab title="主题党日">内容 3</van-tab>
    <van-tab title="三会一课">内容 4</van-tab>
</van-tabs>
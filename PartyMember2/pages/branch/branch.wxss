/* pages/branch/branch.wxss */

page {
    background-color: #F9F9F9;
}

.bg-img {
    width: 100%;
    height: 360rpx;
}


/* 菜单栏 */

.nav {
    /* background-color: red; */
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 15rpx 0;
    margin-top: -5rpx;
    /* background-color: #ffffff; */
    box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
}


/* 菜单项 */

.nav-item {
    width: 140rpx;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-right: 1rpx solid rgba(0, 0, 0, 0.1);
    /* background-color: yellow; */
}

.nav-item:last-child {
    border: 0;
}


/* 图标盒子大小 */

.nav-item .icon {
    width: 60rpx;
    height: 60rpx;
    /* background-color: blue; */
    margin: 0 auto;
}


/* 图标大小 */

.nav-item .icon image {
    width: 100%;
    height: 100%;
}


/* 菜单的名称 */

.nav-item .text {
    font-size: 26rpx;
    color: #8799a3;
}

.box {
    margin: 20rpx;
}
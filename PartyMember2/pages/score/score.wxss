/* pages/score/score.wxss */

page {
    background-color: #ffffff;
}

.scorecontainer {
    margin: 32rpx;
    display: flex;
    flex-direction: column;
}

.menu {
    color: #0C81FF;
    font-size: 40rpx;
    margin-bottom: 18rpx;
}

.cardcontainer {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.card {
    border: 1rpx solid #e8e8e8;
    box-shadow: 0 0 15rpx #f1f2f1;
    align-items: center;
    display: flex;
    flex-direction: column;
    width: 220rpx;
    height: 250rpx;
    border-radius: 10rpx;
    margin-bottom: 25rpx;
}

.img {
    width: 180rpx;
    height: 150rpx;
    margin-top: 36rpx;
}

.cardimg {
    width: 100%;
    height: 100%;
}

.name {
    color: black;
    font-size: 34rpx;
}